<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>

      <h1>Ads</h1>

      <ul class="list-group">
<!-- #1 -->
        <% ads.forEach((ad) => { %>
<!-- #2 -->
          <li class="list-group-item">
            <a href="/ads/<%= ad.id %>"> <%= ad.title %> </a>
            <p> <%= ad.description %> </p>
          </li>
        <% }) %>
      </ul>

    </main>
  </body>
</html>